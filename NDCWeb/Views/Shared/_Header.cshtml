@using Microsoft.AspNet.Identity
@using System.Security.Claims

<header>
    <div class="top_head">
        <div class="container">
            <div class="row">
                <div class="col-md-12 top-acess">
                    <div class="d-flex align-items-center gap-3">
                        <ul id="example1" class="d-flex align-items-center list-unstyled mb-0 gap-3">
                            <li class="skin-reader d-none d-sm-block">
                                <a href='/content2/footer/screen-reader-access/' title='Screen Reader Access'>Screen Reader Access</a>
                            </li>
                            <li>
                                <select name="ddlLang" id="ddlLang" class="c17Master form-select form-select-sm">
                                    <option selected value="1">English</option>
                                    <option value="2">Hindi</option>
                                </select>
                            </li>
                            <li><a href="#main-nav" class="c6Comdt" title="Skip to Content"><i class="fa fa-share"></i></a></li>
                            <li class="dropdown">
                                <a href="javascript:void(0)" class="c6Comdt"><i class="fa fa-wheelchair"></i></a>
                                <ul class="dropdown-content">
                                    <li><a href="#" onClick="set_font_size('decrease')"><img src='/images/decrease-font-size.png' alt="Decrease Font Size"></a></li>
                                    <li><a href="#" onclick="set_font_size('')"><img src='/images/standard-view.png' alt="Normal Font Size"></a></li>
                                    <li><a href="#" onclick="set_font_size('increase')"><img src='/images/increase-text-size.png' alt="Increase Text Size"></a></li>
                                    <li><a href="javascript:void(0)" onclick="setActiveStyleSheet('change')"><img src='/images/high-contrast.png' alt="High Contrast"></a></li>
                                    <li><a href="javascript:void(0)" onclick="setActiveStyleSheet('normal')"><img src='/images/standard-view.png' alt="Normal Theme"></a></li>
                                </ul>
                            </li>
                            <li><a href='#' class="c6Comdt"><i class="fa fa-sitemap"></i></a></li>
                        </ul>
                        <!-- Login pushed to extreme right -->
                        <div class="login-dropdown d-flex align-items-center ms-auto">
                            <span class="c6Comdt me-2">Login</span>
                            <select name="ddlLogin" id="ddlLogin" class="c17Master form-select form-select-sm">
                                @*onchange="if(this.value) window.location.href=this.value;"*@
                                <option value="0" selected disabled>Select Login</option>
                                <option value="/member/">Course Participant</option>
                                <option value="/staff/">Faculty & Staff</option>
                                <option value="/alumni/">Alumni</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mid-head">
        <div class="container">
            <div class="row align-items-center">
                <!-- Left emblem -->
                <div class="col-3 col-md-2 col-lg-1 text-start">
                    <div class="indian-emblem">
                        <a href='/'>
                            <img src='/images/1200px-Emblem_of_India.png' class="bg-white img-fluid" alt="Indian Emblem" title="Indian Emblem" />
                        </a>
                    </div>
                </div>
                <!-- Center logo -->
                <div class="col-6 col-md-8 col-lg-10 text-center">
                    <div class="logo">
                        <h2 lang="hi"><strong>राष्ट्रीय रक्षा महाविद्यालय</strong></h2>
                        <h1>
                            <a class="c18Master" href='/' title="National Defence College">
                                National Defence College
                            </a>
                        </h1>
                        <h2>Ministry of Defence, Government of India</h2>
                    </div>
                </div>
                <!-- Right emblem -->
                <div class="col-3 col-md-2 col-lg-1 text-end">
                    <img src="/images/NDC-Logo1.png" class="img-fluid" alt="NDC Logo">
                </div>
            </div>
        </div>
    </div>
    <script>
        const ddlLogin = document.getElementById("ddlLogin");
        function resetDropdown(e) {
            if (e.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
                ddlLogin.value = "0";
            }
        }
        document.addEventListener("DOMContentLoaded", () => {
            ddlLogin.value = "0";
        });
        window.addEventListener("pageshow", resetDropdown);
        ddlLogin.addEventListener("change", function () {
            if (this.value !== "0") {
                window.location.href = this.value;
            }
        });
    </script>
</header>
