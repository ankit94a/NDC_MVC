@model NDCWeb.View_Models.AlumniCrtVM
@{
    ViewBag.Title = "Alumni Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-contact2 c20RegBg">
    <div class="container-contact2">
        <div class="wrap-contact2">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form class="contact-form shadow-lg p-4 rounded bg-white">
                    <h3 class="form-title text-uppercase text-center mb-4 sidebar-text-dark">
                        <u>@ViewBag.Title</u>
                    </h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!-- BASIC DETAILS -->
                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="card-header custom-header fw-bold">
                            <i class="bi bi-person-lines-fill me-2"></i><span class="text-white">Basic Details</span> 
                        </div>
                        <div class="card-body">
                            <!-- Member Category -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Member Category</label>
                                <div class="col-md-8 d-flex flex-wrap gap-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rdcat" id="rdcat1" value="India" checked>
                                        <label class="form-check-label" for="rdcat1">NDC India Course</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rdcat" id="rdcat2" value="Foreign">
                                        <label class="form-check-label" for="rdcat2">NDC Equivalent Foreign Course</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="rdcat" id="rdcat3" value="InStep">
                                        <label class="form-check-label" for="rdcat3">NDC In-Step Course</label>
                                    </div>
                                </div>
                            </div>
                            <!-- First Name -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">First Name</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!-- Surname -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Surname</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!-- Decoration -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Decoration (for Service Personnel)</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Decoration, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Decoration, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!-- Serving/Retired -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Serving/Retired</label>
                                <div class="col-md-8 d-flex gap-4">
                                    <div class="form-check">
                                        @Html.RadioButtonFor(e => e.ServiceRetd, true, new { id = "attend-true", @class = "form-check-input" })
                                        <label class="form-check-label" for="attend-true">Serving</label>
                                    </div>
                                    <div class="form-check">
                                        @Html.RadioButtonFor(e => e.ServiceRetd, false, new { id = "attend-false", @class = "form-check-input" })
                                        <label class="form-check-label" for="attend-false">Retired</label>
                                    </div>
                                </div>
                            </div>
                            <!-- Service & Rank -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Service & Rank/Designation</label>
                                <div class="col-md-3">
                                    @Html.DropDownList("ServiceId", (IEnumerable<SelectListItem>)ViewBag.Service, "-- Select --", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-2">
                                    @Html.DropDownList("ServiceRankId", new SelectList(string.Empty, "Text", "Value"), "-- Select --", new { @class = "form-control", @id = "ServiceRankId" })
                                    @Html.ValidationMessageFor(model => model.ServiceRank, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3 d-flex align-items-center gap-2">
                                    <label class="form-label">Other:</label>
                                    @Html.EditorFor(model => model.ServiceRank, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <!-- Branch -->
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Branch/Department/Ministry</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <!-- NDC Course -->
                            <div class="row mb-3" id="divndccourse">
                                <label class="col-md-4 col-form-label fw-semibold">NDC Course Number and Year</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.CourseSerNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Course Number" } })
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.CourseYear, Enumerable.Range(1960, 64).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), new { @class = "form-control" })
                                </div>
                            </div>
                            <!-- Foreign Course -->
                            <div class="mb-3" id="divforeigncourse">
                                <label class="col-form-label fw-semibold">Name of the Foreign Course (Course/Country/Year)</label>
                                <div class="row mt-2">
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.NdcEqvCourse, new { htmlAttributes = new { @class = "form-control", @placeholder = "Course" } })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", @placeholder = "Country" } })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.YearDone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Year", @maxlength = "4" } })
                                    </div>
                                </div>
                            </div>
                            <!-- In-Step Course -->
                            <div class="row mb-3" id="divinstepcourse">
                                <label class="col-md-4 col-form-label fw-semibold">In-Step Course</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.InStepCourseId, (IEnumerable<SelectListItem>)ViewBag.InStepCourseId, "-- Select --", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- CONTACT DETAILS -->
                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="card-header custom-header fw-bold">
                            <i class="bi bi-telephone-fill me-2"></i> <span class="text-white">Contact Details</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Mobile No</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">E-mail Id</label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Permanent Address</label>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.PermanentAddress, new { @class = "form-control", rows = "3" })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Correspondence Address</label>
                                <div class="col-md-2 d-flex align-items-center">
                                    <input type="checkbox" id="chksame" class="form-check-input me-2" /> <label for="chksame">Same</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextAreaFor(model => model.NdcCommunicationAddress, new { @class = "form-control", rows = "3" })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4 col-form-label fw-semibold">Other Info</label>
                                <div class="col-md-8">
                                    @Html.TextAreaFor(model => model.OtherInfo, new { @class = "form-control", rows = "5" })
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4"></label>
                                <div class="col-md-8">
                                    @Html.Partial("_Captcha")
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- SUBMIT -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger px-5 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-check-circle me-2"></i> Save
                        </button>
                    </div>
                </form>
            }

        </div>
    </div>
</div>
<div id="dialog"></div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Component/Custom/js/utils.js"></script>
    <script src="~/Component/Custom/js/intlTelInput.js"></script>
}