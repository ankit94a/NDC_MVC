@model NDCWeb.View_Models.SiteFeedbackVM
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="skipCont" class="wrapper"></div>
<div class="ndc-bg">
    
    <div class="container bg-white">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")'>Home</a></li>
                <li class="breadcrumb-item" aria-current="page">@ViewBag.Title</li>
                @*<li class="breadcrumb-item"><a href="#">@ViewBag.Heading</a></li>*@
            </ol>
        </nav>
        <div class="clearfix"></div>
        <div class="card shadow">
            <div class="card-header h3 text-center border-bottom-0">Feedback Form</div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-6 form-row required">
                    @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6 form-row required">
                    @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "" } })
                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12 form-row required">
                    @Html.LabelFor(model => model.DepartmentSubject, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DepartmentSubject, (IEnumerable<SelectListItem>)ViewBag.Department, "-- Select --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentSubject, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12 form-row required">
                    <label class="control-label" for="Comment">Your Feedback (Max character limit 200)</label>
                    @Html.TextAreaFor(model => model.Comment, htmlAttributes: new { @class = "form-control editorHtml", rows = "3", maxlength = "200", autocomplete = "off", autocorrect = "off", value = "" })
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12">

                    @Html.Partial("_Captcha")

                </div>
                <div class="panel-footer bg-white text-center mb-5">
                    <center>
                        <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
                    </center>
                </div>

            }
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}