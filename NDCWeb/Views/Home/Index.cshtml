@using NDCWeb.Infrastructure.Constants;
@{
    ViewBag.Title = "National Defence College";
    if (ViewBag.Course != "N" || ViewBag.InStepCourse != "N")
    {
    <div class="floathome">
        @if (ViewBag.InStepCourse != "N" && ViewBag.Course != "N")
        {
            <a href="/instep/register/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>@ViewBag.InStepCourse Course Registration </a><br />
            <a href="/registration/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>NDC @ViewBag.Course Course Registration</a>
        }
        else if (ViewBag.InStepCourse != "N")
        {
            <a href="/instep/register/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>@ViewBag.InStepCourse Course Registration </a>
        }
        else if (ViewBag.Course != "N")
        {
            <a href="/registration/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>NDC @ViewBag.Course<sup>th</sup> Course Registration</a>
        }
    </div>
    }

}
