<section class="banner_bg pt5">
    <div class="container">

        <div class="row">
            <div class="col-md-3 col-sm-12 col-xs-12 c1News">
                <div class="whats-new-section">
                    <span class="title">
                        Whats New
                    </span>
                    <div class="what-news-wrapper">
                        <ul class="newsslider c2News">
                            @foreach (var item in ViewBag.WhatsNew)
                            {
                                if (item.Highlight == true)
                                {
                                    <li><img src="/images/new.gif"> <a href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">@Html.Raw(@item.Headline)</a> </li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">@Html.Raw(@item.Headline)</a></li>
                                }
                            }
                        </ul>
                        <div class="view-footer text-center">
                            <a href="@Url.Action("index", "news", new { ncat = NewsCategory.WhatsNew })">Read All</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 c3Carousel">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner homeSliderCls">

                    </div>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!--<div class="text-center res-shadow"><img src="/images/shadow-banner.png" alt="" title=""></div>-->
            </div>

            <div class="col-md-3 col-sm-4 col-xs-12 c4Comdt">

                <div class="comdt-section text-center c5Comdt">
                    <div class="comdtsec">
                    </div>
                    <ul>
                        <li><a title='Profile c6Comdt' href='/about/from-commandants-desk/messages'>Commandant's Desk</a></li>
                        <li><a title='Profile c6Comdt' href='/about/from-commandants-desk/former-commandants'>Former Commandants</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="ticker_section">
    <div class="container">
        <marquee class="scroll-text" behavior="scroll" direction="left" onmouseover="this.stop();" onmouseout="this.start();">
            @foreach (var item in ViewBag.Flash)
            {
                if (item.Highlight == true)
                {
                    <a class="btn-link c6Comdt" href="@Html.Raw(@item.ArticleUrl)"><img src="/images/new.gif">  @Html.Raw(@item.Headline)</a><span class="glyphicon glyphicon-forward c7News"></span>
                }
                else
                {
                    <a class="btn-link c6Comdt" href="@Html.Raw(@item.ArticleUrl)">@Html.Raw(@item.Headline)</a><span class="glyphicon glyphicon-forward c7News"></span>
                }
            }
        </marquee>
    </div>
</div>
