@using NDCWeb.Infrastructure.Constants;
@{
    ViewBag.Title = "National Defence College";
    if (ViewBag.Course != "N" || ViewBag.InStepCourse != "N")
    {
        <div class="floathome">
            @if (ViewBag.InStepCourse != "N" && ViewBag.Course != "N")
            {
                <a href="/instep/register/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>@ViewBag.InStepCourse Course Registration </a><br />
                <a href="/registration/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>NDC @ViewBag.Course Course Registration</a>
            }
            else if (ViewBag.InStepCourse != "N")
            {
                <a href="/instep/register/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>@ViewBag.InStepCourse Course Registration </a>
            }
            else if (ViewBag.Course != "N")
            {
                <a href="/registration/"><span class="spinner-grow spinner-grow-sm mr-2" role="status" aria-hidden="true"></span>NDC @ViewBag.Course<sup>th</sup> Course Registration</a>
            }
        </div>
    }

}
<link href="~/Component/css/Modal.css" rel="stylesheet" />

<!--Promo Popup start-->
<div id="openModal" class="modalDialog">
    <div>
        <a href="#close" title="Close" class="close">X</a>
        <p>
            <a href="https://www.gallantryawards.gov.in/" target="_blank"><img src="https://ndc.nic.in//writereaddata/media/files/2021/Sep/91d70307-258f-4d0e-bc48-84e948990257.jpg" /></a>
        </p>
    </div>
</div>
<!--Promo Popup End-->

<style>
    .banner_bg {
        width: 100%;
        padding: 0;
        margin: 0;
    }

    .c3Carousel img {
        width: 100%;
        height: auto;
        display: block;
    }
</style>


<section class="banner_bg pt5">
    <!-- Bootstrap Carousel -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <div class="carousel-inner homeSliderCls">
            <div class="item active">
                <img src="your-image1.jpg" alt="Slide 1">
            </div>
            <div class="item">
                <img src="your-image2.jpg" alt="Slide 2">
            </div>
            <div class="item">
                <img src="your-image3.jpg" alt="Slide 3">
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>


<div class="ticker_section">
    <div class="container">
        <marquee class="scroll-text" behavior="scroll" direction="left" onmouseover="this.stop();" onmouseout="this.start();">
            @foreach (var item in ViewBag.Flash)
            {
                if (item.Highlight == true)
                {
                    <a class="btn-link c6Comdt" href="@Html.Raw(@item.ArticleUrl)"><img src="/images/new.gif">  @Html.Raw(@item.Headline)</a><span class="glyphicon glyphicon-forward c7News"></span>
                }
                else
                {
                    <a class="btn-link c6Comdt" href="@Html.Raw(@item.ArticleUrl)">@Html.Raw(@item.Headline)</a><span class="glyphicon glyphicon-forward c7News"></span>
                }
            }
        </marquee>
    </div>
</div>

<!----- Upcoming Events Section ------>

<section class="site-intro-wrapper">
    <div class="container">
        <div class="row mb-4">
            <!-- Whats New -->
            <div class="col-md-4 col-sm-12 c1News">
                <div class="whats-new-section">
                    <span class="title">Whats New</span>
                    <div class="what-news-wrapper">
                        <ul class="newsslider c2News">
                            @foreach (var item in ViewBag.WhatsNew)
                            {
                                if (item.Highlight == true)
                                {
                                    <li>
                                        <img src="/images/new.gif">
                                        <a href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                        <div class="view-footer text-center">
                            <a href="@Url.Action("index", "news", new { ncat = NewsCategory.WhatsNew })">Read All</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="col-md-4 col-sm-12 c8Upcoming">
                <div class="latest-news-events">
                    <span class="title">Upcoming Events</span>
                    <div class="what-news-wrapper">
                        <ul class="upcomingslide c9Upcoming">
                            @foreach (var item in ViewBag.Upcoming)
                            {
                                if (item.Highlight == true)
                                {
                                    <li>
                                        <a class="btn-link c6Comdt" href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            <img src="/images/new.gif"> @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="btn-link c6Comdt" href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                        <div class="view-footer text-center c10Upcoming">
                            <a href="@Url.Action("index", "news", new { ncat = NewsCategory.Upcoming })">Read All</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Commandant’s Desk -->
            <div class="col-md-4 col-sm-12 c4Comdt">
                <div class="comdt-section text-center c5Comdt">
                    <div class="comdtsec"></div>
                    <ul>
                        <li><a href='/about/from-commandants-desk/messages'>Commandant's Desk</a></li>
                        <li><a href='/about/from-commandants-desk/former-commandants'>Former Commandants</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Last Month Highlights -->
            <div class="col-md-4 col-sm-12">
                <div class="previous-month">
                    <span class="title">Last Months Highlights</span>
                    <div class="what-news-wrapper">
                        <ul class="lastmonthlide 11LastMonth">
                            @foreach (var item in ViewBag.LastMonth)
                            {
                                if (item.Highlight == true)
                                {
                                    <li>
                                        <img src="/images/new.gif">
                                        <a class="c6Comdt" href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="c6Comdt" href="@Url.Action("Article", "News", new { id = item.NewsArticleId })">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                        <div class="view-footer text-center">
                            <a href="@Url.Action("index", "news", new { ncat = NewsCategory.LastMonth })">Read All</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Welcome Section -->

            <div class="col-md-4 col-sm-12 c12Welcome">
                <div class="site-intro d-flex flex-column text-center h-100 p-3 welndc">
                    <!-- Image fixed on top -->
                    <div class="flex-shrink-0">
                        <img class="img-fluid mb-2" src="/images/welcome-to-NDC(1).jpg" style="max-height:150px; object-fit:cover; width:100%;" />
                    </div>

                    <!-- Content under image -->
                    <div class="flex-grow-1 d-flex flex-column">
                        <h4 class="mt-2 text-white">WELCOME TO NATIONAL DEFENCE COLLEGE</h4>
                        <p class="small overflow-auto" style="max-height:100px;">
                            The National Defence College (NDC) was inaugurated on April 27, 1960 by Pandit Jawaharlal Nehru,
                            the first Prime Minister of Independent India.
                        </p>

                        <!-- Button pinned at bottom -->
                        <div class="mt-auto">
                            <button class="cbtn-sm btn-1" id="btnLearnMoreIndex" type="button">Learn more</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- NDC in News -->
            <div class="col-md-4 col-sm-12 c14LatestNews">
                <div class="ndc-in-news">
                    <span class="title">NDC in News</span>
                    <div class="ndc-in-news-wrapper">
                        <ul class="lastmonthlide c15NdcinNews">
                            @foreach (var item in ViewBag.NdcNews)
                            {
                                if (item.Highlight == true)
                                {
                                    <li>
                                        <a class="c16NdcinNews" href="@Html.Raw(@item.ArticleUrl)" target="_blank">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="c16NdcinNews" href="@Html.Raw(@item.ArticleUrl)" target="_blank">
                                            @Html.Raw(@item.Headline)
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



