@{
    ViewBag.Title = "Reset password confirmation";
}
<div class="container">
    <div class="card mb-3 shadow-sm col-md-6">
        <div class="card-header">@ViewBag.Title</div>
        <div class="card-body">
            <p>
                Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
</div>