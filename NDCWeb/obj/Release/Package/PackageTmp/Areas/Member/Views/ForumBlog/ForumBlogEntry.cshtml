@model NDCWeb.Areas.Member.View_Models.ForumBlogCrtVM
@{
    ViewBag.Title = "Upload Work Items";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-11">
            @using (Html.BeginForm("ForumBlogEntry", "ForumBlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card shadow mt-4 mb-4">
                    <div class="card-header" style="background-color:#fff">
                        &nbsp;&nbsp;&nbsp;&nbsp;   @ViewBag.Title
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("Category", (IEnumerable<SelectListItem>)ViewBag.GetForumBlogCat, "-- Select --", htmlAttributes: new { @class = "form-control",@id= "categroydropdown" })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.StaffId, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.Staff, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="Files" name="Files" class="control-label">Browse</label>
                                <label class="badge badge-danger">File Size Should not more than 5Mb.</label>
                                <input id="Files" type="file" name="Files" multiple required class="uploadify-button" accept="image/jpeg,image/png,application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/vnd.ms-excel" />
                            </div>
                             @*MODULE DROPDOWN ADD BY AMITESH*@
                            <div class="form-group col-md-6" id="moduledropdown">
                                @Html.LabelFor(model => model.Module, htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.Module, (IEnumerable<SelectListItem>)ViewBag.Module, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Module, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label class="control-label">Brief Description</label>
                                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control editorHtml", rows = "4", autocomplete = "off", autocorrect = "off", value = "" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white text-center">
                        <input type="submit" value="Upload" class="btn btn-primary  btn-sm" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-sm" })
                        <label class="badge badge-danger">Please make sure your file name do not contain [.] or any other special character.</label>
                    </div>
                </div>
            }
        </div>
        @*<div class="col-md-3">
            <div class="card shadow mt-4 mb-4">
                <div class="card-body">
                    <div class="list-group" style="clear:both">
                        <p class="list-group-item active">Download Format(s)</p>
                        <a class="list-group-item list-group-item-action" href="~/writereaddata/online-uploads/ASAT-Format.docx" download="ASAT-Format.docx">ASAT <i class="fa fa-file-word-o"></i></a>
                        <a class="list-group-item list-group-item-action" href="~/writereaddata/online-uploads/Thesis-Format.docx" download="Thesis-Format.docx">Thesis <i class="fa fa-file-word-o"></i></a>
                        <a class="list-group-item list-group-item-action" href="~/writereaddata/online-uploads/IAG-Paper-Format.docx" download="IAG-Paper-Format.docx">IAG Paper <i class="fa fa-file-word-o"></i></a>
                        <a class="list-group-item list-group-item-action" href="~/writereaddata/online-uploads/Other-Inputs-Format.docx" download="Other-Inputs-Format.docx">Other Inputs <i class="fa fa-file-word-o"></i></a>
                    </div>
                </div>
            </div>
        </div>*@
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#moduledropdown').hide();
            $('#categroydropdown').change(function () {
               // debugger;
                //var selected = $(this.val);
                var selectedText = $('#categroydropdown option:selected').text();
                //alert(selectedText);
                if (selectedText == "IAG Papers") {
                    $('#moduledropdown').show();
                } else {
                    $('#moduledropdown').hide();
                }
            });

        });
    </script>
}