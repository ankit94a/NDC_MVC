@*@model NDCWeb.Areas.Member.View_Models.CrsMbrBiographyVM*@
@model NDCWeb.Areas.Member.View_Models.BiographyIndxVM

<div class="card">
    <div class="card-body">
        <table class="table table-condensed table-bordered table-hover">
            <tr class="bg-light">
                <td colspan="10">BIOGRAPHICAL SKETCH</td>
            </tr>
            <tr>
                <td class="juipfname">@Html.DisplayNameFor(model => model.PenPicture)</td>
                <td class="juipfvalue"> @Html.DisplayFor(model => model.PenPicture)</td>
                <td class="juipfname"> @Html.DisplayNameFor(model => model.FamilyBackground)</td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.FamilyBackground)</td>
                <td class="juipfname">@Html.DisplayNameFor(model => model.EarlySchooling) </td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.EarlySchooling)</td>
                <td class="juipfname">@Html.DisplayNameFor(model => model.AcademicAchievement) </td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.AcademicAchievement)</td>
                <td class="juipfname">@Html.DisplayNameFor(model => model.PersonalValueSystem) </td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.PersonalValueSystem)</td>
            </tr>
        </table>
        <div class="panel-footer">
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnPrevious">Previous</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-success" id="btnEdit" onclick="editTab('BiographyPartial')">Edit</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnNext">Next</a>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('.btnNext').click(function () {
            $('.nav-tabs .active').parent().next('li').find('a').trigger('click');
        });

        $('.btnPrevious').click(function () {
            $('.nav-tabs .active').parent().prev('li').find('a').trigger('click');
        });
    });
</script>
