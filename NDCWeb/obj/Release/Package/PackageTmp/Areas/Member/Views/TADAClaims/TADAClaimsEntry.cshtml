@model NDCWeb.Areas.Member.View_Models.TADAClaimsCrtVM

@{
    ViewBag.Title = "Entry";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
<div class="container mb-4 mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card mt-4  mb-4 shadow-sm">
                <div class="card-header" style="margin-left:12px !important">
                    TA/DA Claims Entry
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBox(" ", (string)ViewBag.FullName, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.CDAACNo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.CDAACNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CDAACNo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.BasicPay, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.BasicPay, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BasicPay, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.MSP, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.MSP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MSP, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-2">
                            @Html.LabelFor(model => model.PayLevel, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.PayLevel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PayLevel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.BankNameAddress, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.BankNameAddress, htmlAttributes: new { @class = "form-control editorHtml", rows = "4", autocomplete = "off", autocorrect = "off", value = "" })
                            @Html.ValidationMessageFor(model => model.BankNameAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.PayACOffcAddress, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.PayACOffcAddress, htmlAttributes: new { @class = "form-control editorHtml", rows = "4", autocomplete = "off", autocorrect = "off", value = "" })
                            @Html.ValidationMessageFor(model => model.PayACOffcAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.MobileNo, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", @Value = (string)ViewBag.MobileNo, @type = "number" } })
                            @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white text-center mt-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    
    }