@model NDCWeb.Areas.Member.View_Models.CrsMbrAppointmentVM
<div class="card">
    <div class="card-body">
        <table class="table table-condensed table-bordered table-hover">
            <tr class="bg-light">
                <td colspan="6">APPOINTMENT DETAILS (PRESENT)</td>
                
            </tr>
            <tr>
                <td class="juipfname">@Html.DisplayNameFor(model => model.Designation)</td>
                <td class="juipfvalue"> @Html.DisplayFor(model => model.Designation)</td>
                <td class="juipfname"> @Html.DisplayNameFor(model => model.Organisation)</td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.Organisation)</td>
                <td class="juipfname">@Html.DisplayNameFor(model => model.Location) </td>
                <td class="juipfvalue">@Html.DisplayFor(model => model.Location)</td>
            </tr>
        </table>
        <div class="panel-footer">
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnPrevious">Previous</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-success" id="btnEdit" onclick="editTab('AppointmentPartial')">Edit</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnNext">Next</a>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('.btnNext').click(function () {
            $('.nav-tabs .active').parent().next('li').find('a').trigger('click');
        });

        $('.btnPrevious').click(function () {
            $('.nav-tabs .active').parent().prev('li').find('a').trigger('click');
        });
    });
</script>
