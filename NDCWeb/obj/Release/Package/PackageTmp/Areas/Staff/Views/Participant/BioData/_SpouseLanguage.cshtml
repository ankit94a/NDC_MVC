@*@model IEnumerable<NDCWeb.Areas.Member.View_Models.SpouseLanguageIndxVM>*@
@model IEnumerable<NDCWeb.Models.SpouseLanguage>

<table class="table table-condensed table-bordered table-hover">
    <thead>
        <tr class="bg-light">
            <td class="juipfname">Language</td>
            <td class="juipfname">Read</td>
            <td class="juipfname">Write</td>
            <td class="juipfname">Speak</td>
            <td class="juipfname">Qualification</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="juipfvalue">@Html.DisplayFor(modelItem => item.Language)</td>
                <td class="juipfvalue">@Html.DisplayFor(modelItem => item.Read)</td>
                <td class="juipfvalue">@Html.DisplayFor(modelItem => item.Write)</td>
                <td class="juipfvalue">@Html.DisplayFor(modelItem => item.Speak)</td>
                <td class="juipfvalue">@Html.DisplayFor(modelItem => item.Qualification)</td>
            </tr>
        }
    </tbody>
</table>
