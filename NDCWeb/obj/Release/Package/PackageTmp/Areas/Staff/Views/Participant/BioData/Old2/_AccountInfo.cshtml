        <td class="juipfname">@Html.DisplayNameFor(model => model.NameAndAddressOfBanker) </td>
        <td class="juipfvalue">@Html.DisplayFor(model => model.NameAndAddressOfBanker)</td>
        <td class="juipfname">@Html.DisplayNameFor(model => model.PassbookPath)</td>
        <td class="juipfvalue" colspan="4"><a href="@Url.Content(Model.PassbookPath ?? "#")">Cancelled Cheque</a></td>
    </tr>
    <tr class="bg-2 text-white">
        <td colspan="8">PAO Details (Indian Army & Navy Officers only)</td>
