@model IEnumerable<NDCWeb.Areas.Member.View_Models.TelecommRequirementIndexVM>

@{
    ViewBag.Title = "List of Misc Requirements";
}
@Styles.Render("~/bundles/datatables/ButtonCss")
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.jqueryui.min.css" rel="stylesheet" />

<div class="container mb-3 card col-md-12">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.Title</h5>
            <table class="mb-0 table table-hover table-bordered tab w-100" id="myTable">
                <thead>
                    <tr>
                        <th style="visibility:hidden;"></th>
                        <th style="vertical-align: top; text-align: justify">
                            Full Name
                        </th>
                        <th style="vertical-align: top; text-align: justify">
                            Accommodation Form - Qtr Allotment. Post receipt activity is undertaken
                        </th>
                        <th style="vertical-align: top; text-align: justify">
                            Do you require internet (FTTH) at Residence
                        </th>
                        <th style="vertical-align: top; text-align: justify">
                            Address where Internet is required
                        </th>
                        <th style="vertical-align: top; text-align: justify">
                            Type of Connection required
                        </th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="visibility:hidden">
                                @Html.DisplayFor(modelItem => item.TelecommReqId)
                            </td>
                            <td>
                                
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HouseNo)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.ReqInternet)*@
                                @(item.ReqInternet == true? "Yes" : "No")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ResidentialComplex)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeOfConnection)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
