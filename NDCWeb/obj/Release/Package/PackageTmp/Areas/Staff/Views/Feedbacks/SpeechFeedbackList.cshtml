@model IEnumerable<NDCWeb.Areas.Member.View_Models.ShowSpeechFeedbackAllVM>

@{
    ViewBag.Title = "Member's Feedback on Speech ";

}

<div class="container pt-2">
    <div class="card mb-4">
        <div class="card-header" style="background-color:#fff">
            @ViewBag.Title <span class="pull-right">
                <a href="/staff/speechevent/" class="btn btn-primary btn-sm">View Feedback Summary</a>
                ||<a href="/staff/TrainingReport/ShowSpeechFeedbackNoting/" class="btn btn-primary btn-sm">View Feedback Noting</a>
            </span>
        </div>
        <div class="card-body">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            Locker No.
                        </th>
                        <th>
                            @Html.DisplayName("Member Name")
                        </th>
                        <th>
                            @Html.DisplayName("Speech On Date")
                        </th>
                        <th>
                            @Html.DisplayName("Subject")
                        </th>
                        <th>
                            @Html.DisplayName("Topic")
                        </th>
                        <th>
                            @Html.DisplayName("Speaker")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QualityTalk)
                        </th>
                        <th>
                            Recomend for Next Course
                        </th>
                        <th>
                            Have You Attend This Lecture
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Suggetions)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LockerNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MemberFullName)
                            </td>
                            <td>
                                @item.SpeechDate.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TopicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @if (item.QualityTalk == "1")
                                {
                                    <span>Poor</span>
                                }
                                else if (item.QualityTalk == "2")
                                {
                                    <span>Average</span>
                                }
                                else if (item.QualityTalk == "3")
                                {
                                    <span>Very Good</span>
                                }
                                else if (item.QualityTalk == "4")
                                {
                                    <span>Excellent</span>
                                }
                            </td>
                            <td>
                                @{
                                    if (item.RecomendForNextCourse == "N")
                                    {
                                        <span>No</span>
                                    }
                                    else if (item.RecomendForNextCourse == "Y")
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span></span>
                                    }
                                }
                            </td>
                            <td>
                                @{
                                    if (item.LectureAttend == "N")
                                    {
                                        <span>No</span>
                                    }
                                    else if (item.LectureAttend == "Y")
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span></span>
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Suggetions)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer"></div>
    </div>
</div>

@section Scripts {
    <script>
        LoadJDT('#myTable');
    </script>
}