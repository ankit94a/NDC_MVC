@model NDCWeb.Areas.Staff.View_Models.StaffSuggestionUpdVM
@{
    ViewBag.Title = "Segestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="skipCont" class="wrapper"></div>
<div class="ndc-bg">

    <div class="container bg-white">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")'>Home</a></li>
                <li class="breadcrumb-item" aria-current="page">@ViewBag.Title</li>
                @*<li class="breadcrumb-item"><a href="#">@ViewBag.Heading</a></li>*@
            </ol>
        </nav>
        <div class="clearfix"></div>
        <div class="card shadow">
            <div class="card-header h3 text-center border-bottom-0">Suggestion Form</div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SuggestionId)
                <div class="form-group col-md-12 form-row required">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Status, (IEnumerable<SelectListItem>)ViewBag.StatusTypesOption, "-- Select --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-12 form-row required">
                    <label class="control-label" for="Comment">Your Segestion (Max character limit 200)</label>
                    @Html.TextAreaFor(model => model.Reply, htmlAttributes: new { @class = "form-control editorHtml", rows = "3", maxlength = "200", autocomplete = "off", autocorrect = "off", value = "" })
                    @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
                </div>
                <div class="panel-footer bg-white text-center mb-5">
                    <center>
                        <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
                    </center>
                </div>

            }
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}