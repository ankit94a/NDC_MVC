                        @Html.ValidationMessageFor(model => model.HolidayType, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.HolidayDate, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.HolidayDate, new { htmlAttributes = new { @class = "form-control datepickerJq1" } })
                        @Html.ValidationMessageFor(model => model.HolidayDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
