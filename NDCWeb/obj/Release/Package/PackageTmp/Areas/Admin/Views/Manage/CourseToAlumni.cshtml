@model NDCWeb.Areas.Admin.View_Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Transfer Course Member to Alumni";
}
<div class="page-body">
    @using (Html.BeginForm("CourseToAlumni", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-header"> @ViewBag.Title
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <a href="@Url.Action("Index", "Home")" title="Click here to close this form"><i class="fa fa-arrow-left"></i></a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label class="text-danger">@ViewBag.Error</label>
                    <br />
                    <input type="submit" value="Transfer" class="btn btn-primary m-b-0" />
                    <br />
                    <p><strong><u>Note:</u></strong>
                    This function will insert all the course member of the previous course to the Alumni.
                    </p>
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

