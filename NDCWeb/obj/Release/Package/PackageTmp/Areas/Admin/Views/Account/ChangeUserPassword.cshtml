@model NDCWeb.Areas.Admin.View_Models.ChangeUserPasswordViewModel

@{ ViewBag.Title = "Change Password"; }

@using (Html.BeginForm("ChangeUserPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Change your password</h5>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-3 control-label" })
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                    @Html.HiddenFor(m => m.hdns)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 control-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" class="btn btn-primary" value="Update" />
                     <button class="btn btn-primary btn-block btn-lg" style="font-size: 1.5em;" type="submit" onclick="Validatepage();">Sign in</button>*@
                    <button type="submit" class="btn btn-primary" onclick="Changepage();">Change</button>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/aes.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptft.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptimp.js"></script>
}
