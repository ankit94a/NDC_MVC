@model IEnumerable<NDCWeb.Areas.Admin.View_Models.RankMasterIndxVM>

@{
    ViewBag.Title = "List of Rank";
}
<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">List of Rank (s)</h5>
        <div class="pull-right">
            <a href="@Url.Action("Create","RankMaster")" class="btn-shadow mb-3 mt-0 btn btn-primary">Create Rank</a>
        </div>
        <table class="mb-0 table table-hover table-bordered tab w-100" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RankId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RankName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seniority)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RankId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RankName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service)
                    </td>
                    <td>
                        @if (item.Seniority != null)
                        {
                            <text>@item.Seniority.Value.ToString("0")</text>
                         }

                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.RankId })"><i class="fa fa-edit"></i></a>
                        <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.RankId, this)"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
    LoadJDT('#myTable');

    function Delete(id, event) {
        var TableId = "#myTable";
        var Jsonurl = '@Url.Action("DeleteOnConfirm")';
        DeleteJDTRow(id, event, TableId, Jsonurl);
    }
    </script>
}
