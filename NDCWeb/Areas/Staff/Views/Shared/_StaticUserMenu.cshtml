<!-- Sidebar with dynamic menu -->
<div id="main-nav" class="navigation-bg">
    @if (ViewBag.SiteMenuStaffType != null)
    {
        if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "AQ")
        {
            @Html.Partial("UserMenu/_AQMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "DS (COORD)")
        {
            @Html.Partial("UserMenu/_DSMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "JDS (R&R)")
        {
            @Html.Partial("UserMenu/_JDSRMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "JDS (ADM)")
        {
            @Html.Partial("UserMenu/_JDSADMMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "SECRETARY")
        {
            @Html.Partial("UserMenu/_SECYMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "COMDT")
        {
            @Html.Partial("UserMenu/_COMDTMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "GSO (SYS)")
        {
            @Html.Partial("UserMenu/_GSOMenu");
        }
        else if (ViewBag.SiteMenuStaffType.ToString().ToUpper() == "SDS")
        {
            @Html.Partial("UserMenu/_SDSMenu");
        }
        else
        {
            @Html.Partial("UserMenu/_OtherMenu");
        }
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".sf-menu li.has-sub > a").forEach(link => {
            link.addEventListener("click", function (e) {
                e.preventDefault();
                let parentLi = this.parentElement;
                parentLi.classList.toggle("active");
            });
        });
    });

</script>
