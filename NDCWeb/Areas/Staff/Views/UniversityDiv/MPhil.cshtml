@model IEnumerable<NDCWeb.Areas.Member.View_Models.MPhilMemberIndxVM>
@{
    ViewBag.Title = "LIST OF APPLICATION FOR ADMISSION TO M.PHIL PROGRAMMES";
}
@Styles.Render("~/bundles/datatables/ButtonCss")
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.jqueryui.min.css" rel="stylesheet" />
<div class="container mb-4 mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            &nbsp;&nbsp;   @ViewBag.Title
        </div>
        <div class="card-body">
            <table class="table w-100" id="myTable">
                <thead>
                    <tr>
                        <th style="vertical-align: middle; white-space: nowrap">
                            Applicant Name
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            Mobile No
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayNameFor(model => model.EmailId)
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            DOB
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayNameFor(model => model.Nationality)
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicantNameEnglish)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.CommunicationMob)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.EmailId)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.DOBirth)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.Nationality)
                            </td>
                            <td style="vertical-align: middle;">
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td style="vertical-align: middle; white-space: nowrap">
                               <a class="btn btn-transparent red btn-xs" href="@Url.Action("MPhilDetail", new { id = item.MPhilId })" title="View Detail"><i class="fa fa-columns"></i></a>
                                <a class="btn btn-transparent text-danger btn-xs" onclick="Delete(@item.MPhilId, this)"><i class="fa fa-trash" title="Delete this Application"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*<div class="panel-footer bg-white text-center mb-4">
            @Html.ActionLink("Back", "index", new { controller = "home" }, new { @class = "btn btn-primary btn-sm" })
        </div>*@
    </div>
</div>
