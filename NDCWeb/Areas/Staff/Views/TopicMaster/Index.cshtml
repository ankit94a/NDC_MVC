@model IEnumerable<NDCWeb.Areas.Staff.View_Models.TopicMasterIndxVM>

@{
    ViewBag.Title = "Index";
}

<h3 style="text-align:center">Topic List</h3>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add Topic</a>
</p>
<table class="table table-hover table-bordered tab w-100" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopicName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subjects.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.TopicId })"><i class="fa fa-edit"></i></a>
                    <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.TopicId, this)"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
    LoadJDT('#myTable');

    function Delete(id, event) {
        var TableId = "#myTable";
        var Jsonurl = '@Url.Action("DeleteOnConfirm")';
        DeleteJDTRow(id, event, TableId, Jsonurl)
    }
    </script>
}
