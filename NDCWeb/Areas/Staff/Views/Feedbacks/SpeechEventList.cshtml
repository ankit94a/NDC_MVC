@model IEnumerable<NDCWeb.Areas.Staff.View_Models.SpeechEventIndxVM>

@{
    ViewBag.Title = "List of Speech";
    Layout = "~/Areas/Staff/Views/Shared/_Layout.cshtml";
}
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Component/DataTable2/Buttons-1.6.1/css/buttons.jqueryui.min.css" rel="stylesheet" />
<div class="container">
    <div class="card">
        <div class="card-header">
            @ViewBag.Title
            @*<a href="/staff/Speakers/create" class="btn btn-primary btn-sm pull-right">Add Speaker</a>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm pull-right" })*@
            @*<a href="/staff/feedbacks/speechfeedbacklist" class="btn btn-primary btn-sm pull-right">Speaker Feedback</a>*@
            <a href="/staff/TrainingReport/ConsolidatedSpeakerFeedback/All" class="btn btn-primary btn-sm pull-right ml-1">Consolidated Speaker Feedback</a>
            <a href="/staff/TrainingReport/ShowSpeechFeedbackNoting/" class="btn btn-primary btn-sm pull-right">View Noting</a>
        </div>
        <div class="card-body">
            <table class="mb-0 table table-hover table-bordered tab w-100" id="myTable">
                <thead>
                    <tr>
                        <th>
                        </th>
                        <th style="vertical-align:middle">
                            Date
                            @*@Html.DisplayNameFor(model => model.SpeechDate)*@
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayName("Subject")
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayName("Topic")
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayName("Speaker")
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            Start Date
                            @*@Html.DisplayNameFor(model => model.FeedbackStartDate)*@
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            End Date
                            @*@Html.DisplayNameFor(model => model.FeedbackEndDate)*@
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th style="vertical-align: middle; white-space: nowrap">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string id = item.SpeechDate.ToString("MMddyyyy");
                        int id2 = Convert.ToInt32(id);
                        <tr>
                            <td>
                                @id2
                            </td>
                            <td style="white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.SpeechDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speakers.Topics.Subjects.SubjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speakers.Topics.TopicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Speakers.FullName)
                            </td>
                            <td style="white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.FeedbackStartDate)
                            </td>
                            <td style="white-space: nowrap">
                                @Html.DisplayFor(modelItem => item.FeedbackEndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            @* <td>
                                    <a href="@Url.Action("ShowSpeechFeedbackSummary", "TrainingReport", new { speechEventId = item.SpeechEventId })"><i class="fa fa-eye"></i>Summary</a> |
                                    <button type="button" class="btn btn-transparent btn-xs text-danger" onclick="Delete(@item.SpeechEventId, this)"><i class="fa fa-trash"></i></button>
                                </td>*@
                            <td>

                                @*@Html.ActionLink("Edit", "Edit", new { id = item.SpeechEventId }) | @Html.ActionLink("Details", "Details", new { id = item.SpeechEventId }) |*@
                                <a href="@Url.Action("ShowSpeechFeedbackSummary", "TrainingReport", new { speechEventId = item.SpeechEventId })" title="View Summary"><i class="fa fa-list-alt" aria-hidden="true"></i></a> | <button type="button" class="btn btn-transparent btn-xs text-danger" onclick="Delete(@item.SpeechEventId, this)"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
