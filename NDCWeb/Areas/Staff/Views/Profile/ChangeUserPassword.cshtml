@model NDCWeb.Areas.Admin.View_Models.ChangeUserPasswordViewModel
@{ ViewBag.Title = "Change Your Password"; }
<div class="container">
    @using (Html.BeginForm("ChangeUserPassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-center align-items-center vh-80 mt-5">
            <div class="card shadow-sm col-md-6">
                <div>@ViewBag.Title</div>
                @Html.HiddenFor(m => m.hdns)
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.CurrentPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "off", autocorrect = "off", value = "", oncopy = "return false", onpaste = "return false" })
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center bg-white">
                    <button type="submit" class="btn btn-outline-danger" onclick="Changepage();">Change</button>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/aes.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptft.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptimp.js"></script>
}
