@model NDCWeb.Areas.Alumni.View_Models.AlumniArticleUpVM

@{
    ViewBag.Title = "Edit Work Items";
    //Layout = "~/Areas/Alumni/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    @using (Html.BeginForm("AlumniArticleEdit", "AlumniArticle", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="card shadow-lg border-0 rounded-3">
            <!-- Card Header -->
            <div class="card-header custom-header text-white py-3">
                <h5 class="mb-0 fw-bold ps-3">@ViewBag.Title</h5>
            </div>
            <!-- Card Body -->
            <div class="card-body p-4">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.ArticleId)
                <div class="row g-4">
                    <!-- Category -->
                    <div class="col-md-4">
                        <div class="form-floating">
                            @Html.DropDownList("Category", (IEnumerable<SelectListItem>)ViewBag.GetAlumniArticleCat, "-- Select Category --",
                                htmlAttributes: new { @class = "form-select" })
                            <label for="Category">Category</label>
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                    <!-- File Upload -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Upload File</label>
                        <input id="Files" type="file" name="Files" multiple class="form-control form-control-sm"
                               accept="image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel" />
                    </div>
                </div>
                <!-- Description -->
                <div class="mt-4">
                    <div class="form-floating">
                        @Html.TextAreaFor(model => model.Description,
                            new { @class = "form-control editorHtml", rows = "5", autocomplete = "off", autocorrect = "off", placeholder = "Write description here..." })
                        <label for="Description">Description</label>
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>
            <!-- Card Footer -->
            <div class="card-footer d-flex justify-content-end gap-2 bg-light border-0">
                <a class="btn btn-outline-secondary px-4" href="@Url.Action("Index")">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-save"></i> Update
                </button>
            </div>
        </div>
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function docValidateEdit(fileUploadId, fileLocId) {
            let fileTypes = ['jpg', 'jpeg', 'png', 'pdf', 'doc', 'docx', 'txt', 'xlsx', 'ppt', 'zip'];
            let extValidate = fileExtensionValidation(fileUploadId, fileTypes);
            let sizeValidate = fileSizeValidation(fileUploadId, 1024);
            if (extValidate == true && sizeValidate == true) {
                let url = '@Url.Action("DocumentUpload")';
                uploadFile(fileUploadId, fileLocId, url);
            }
        }
    </script>
}