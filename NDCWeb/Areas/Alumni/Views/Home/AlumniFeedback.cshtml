@model NDCWeb.View_Models.AlumniFeedbackCrtVM
@{
    ViewBag.Title = "Alumni Feedback";
}

<style>
    /*.form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 6px rgba(40, 167, 69, 0.4);
    }*/
</style>

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header custom-header btlr text-white fw-bold py-3">
            <i class="bi bi-chat-dots-fill"></i> &nbsp; Feedback Form
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mt-3" })
            <div class="card-body px-4 py-4">
                <div class="form-group mb-4">
                    <label class="form-label fw-semibold" for="Comment">💬 Your Feedback</label>
                    <small class="text-muted d-block mb-2">(Max 200 characters)</small>
                    @Html.TextAreaFor(model => model.Comment,
                        new { @class = "form-control shadow-sm", rows = "3", maxlength = "200", placeholder = "Type your feedback here..." })
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer bg-light text-center btlr">
                <button type="submit" class="btn btn-danger px-4 me-2 shadow-sm">
                    <i class="bi bi-send-fill"></i> Submit
                </button>
                <a class="btn btn-secondary px-4" href="/alumni/home/">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        }
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}