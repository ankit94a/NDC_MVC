@model IEnumerable<NDCWeb.View_Models.AlumniIndxVM>
@using NDCWeb.Infrastructure.Extensions
@{
    ViewBag.Title = "My Course Members";
}
<div class="container mt-4">
    <div class="panel-heading border-bottom">
        <h3 class="h3 text-primary">@ViewBag.Title</h3>
    </div>
    @using (Html.BeginForm("MyCourseMates", "AlumniConnectWith", FormMethod.Post))
    {
        <div class="card-block">
            <div class='form-group row'>
                <div class="col-md-8">
                    <label class="col-form-label">Search Text</label>
                    <input type="text" name="searchText" placeholder="Search by Name, Email or MobileNo " class="form-control" required />
                </div>
                <!--<div class="col-md-3">
                    <label class="col-form-label">Search Category</label>
                    <select class="form-control" id="searchBy" required name="searchBy">
                        <option value="FN">Name</option>
                        <option value="M">Mobile</option>
                        <option value="E">Email</option>
                    </select>-->
                    @*@Html.DropDownList("searchBy", new List<SelectListItem> { new SelectListItem { Text = "Name", Value = "N" }, new SelectListItem { Text = "Mobile No", Value = "M" }, new SelectListItem { Text = "Email", Value = "E" } }, "--Select--", new { @class = "form-control", @name = "searchBy" })*@
                <!--</div>-->
                <div class="col-md-2">
                    <label class="col-form-label col-md-4">&nbsp;.</label>
                    <button type="submit" value="OK" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> Search </button>
                </div>
            </div>
        </div>
    }
    <div class="card-body">
        @foreach (var item in Model)
        {
            <table class="table table-info">
                <tr>
                    <td rowspan="6" width="180">
                        @if (item.AlumniPhoto != null && item.AlumniPhoto != "#")
                        {
                            <img src="@Url.Content(item.AlumniPhoto)" height="120" alt="@item.FirstName @item.Surname" />
                        }
                    </td>
                </tr>
                <tr>
                    <td width="180">Full Name</td>
                    <td>@item.FirstName @item.Surname</td>
                </tr>
                <tr>
                    <td>Country / Service</td>
                    <td>@item.Country @item.Branch</td>
                </tr>
                <tr>
                    <td>Course, Year</td>
                    <td>
                        @if (item.InStepCourseId == null)
                        {
                            <span>NDC @item.CourseSerNo @item.NdcEqvCourse (@item.YearDone)</span>
                        }
                        else
                        {
                            <span>@ViewBag.instepcourse</span>
                        }
                                    </td>
                    @*@item.YearDone @item.CourseYear*@
                </tr>
                <tr>
                    <td> Mobile No</td>
                    <td> 
                      @if (!string.IsNullOrEmpty(item.MobileNo))
                      {
                         <span>@AESEncrytDecry.MaskMobile(item.MobileNo).ToString()</span>
                      }                    
                    </td>
                </tr>
                <tr>
                    <td>Email Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Email))
                        {
                           <span>@AESEncrytDecry.MaskEmail(item.Email).ToString()</span>
                        }
                    </td>
                </tr>
            </table>
            <br />
        }
    </div>
    <div class="panel-footer mb-4 text-center">
        <a href="/alumni/home/" class="btn btn-primary btn-sm"> Back</a>
    </div>
</div>