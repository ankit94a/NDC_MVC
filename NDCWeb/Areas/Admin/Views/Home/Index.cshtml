
@{
    ViewBag.Title = "";
    //Layout = "~/Areas/Admin/Views/Shared/_LayoutNew.cshtml";
}
<!-- Main page content-->
<header class="py-10 mb-4 bg-gradient-primary-to-secondary">
    <div class="container-xl px-4">
        <div class="text-center">
            <h1 class="text-white">Welcome to NDC Web-admin Dashboard</h1>
            <p class="lead mb-0 text-white-50">A professionally designed admin panel built with MVC for National Defence College Website</p>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <div class="row">
        <div class="col-xl-4 mb-4">
            <!-- Dashboard example card 1-->
            <a class="card lift h-100" href="@Url.Action("Create","MenuItemMaster")">
                <div class="card-body d-flex justify-content-center flex-column">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="me-3">
                            <i class="feather-xl text-primary " data-feather="package"></i>
                            <h5>Dynamic Content</h5>
                            <div class="text-muted small">To create informative visual elements on your pages</div>
                        </div>
                        <img src="~/Areas/Admin/Component/Ntheme/img/illustrations/browser-stats.svg" alt="..." style="width: 8rem" />
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-4 mb-4">
            <!-- Dashboard example card 2-->
            <a class="card lift h-100" href="@Url.Action("Index", "MediaGallery")">
                <div class="card-body d-flex justify-content-center flex-column">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="me-3">
                            <i class="feather-xl text-secondary " data-feather="book"></i>
                            <h5>Static Files</h5>
                            <div class="text-muted small">To keep static content accessible to and secure</div>
                        </div>
                        <img src="~/Areas/Admin/Component/Ntheme/img/illustrations/processing.svg" alt="..." style="width: 8rem" />
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-4 mb-4">
            <!-- Dashboard example card 3-->
            <a class="card lift h-100" href="@Url.Action("Index", "StaffMaster")">
                <div class="card-body d-flex justify-content-center flex-column">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="me-3">
                            <i class="feather-xl text-green " data-feather="layout"></i>
                            <h5>Organisation &amp; Data</h5>
                            <div class="text-muted small">To help you get organized college data</div>
                        </div>
                        <img src="~/Areas/Admin/Component/Ntheme/img/illustrations/windows.svg" alt="..." style="width: 8rem" />
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (var item in ViewBag.Visits)
        {
            <div class="col-xl-3 col-md-6 mb-4">
                <!-- Dashboard info widget 1-->
                <div class="card border-start-lg border-start-primary h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="small fw-bold text-primary mb-1">Pages</div>
                                <div class="h5">@item.TotalPages</div>
                                <div class="text-xs fw-bold text-success d-inline-flex align-items-center">
                                    <i class="me-1" data-feather="trending-up"></i>
                                    12%
                                </div>
                            </div>
                            <div class="ms-2"><i class="fas fa-dollar-sign fa-2x text-gray-200"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <!-- Dashboard info widget 2-->
                <div class="card border-start-lg border-start-secondary h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="small fw-bold text-secondary mb-1">Total Visits</div>
                                <div class="h5">@item.Overall</div>
                                <div class="text-xs fw-bold text-danger d-inline-flex align-items-center">
                                    <i class="me-1" data-feather="trending-up"></i>
                                    3%
                                </div>
                            </div>
                            <div class="ms-2"><i class="fas fa-tag fa-2x text-gray-200"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <!-- Dashboard info widget 3-->
                <div class="card border-start-lg border-start-success h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="small fw-bold text-success mb-1">Yesturday visits</div>
                                <div class="h5">@item.Yesturday</div>
                                <div class="text-xs fw-bold text-success d-inline-flex align-items-center">
                                    <i class="me-1" data-feather="trending-up"></i>
                                    12%
                                </div>
                            </div>
                            <div class="ms-2"><i class="fas fa-mouse-pointer fa-2x text-gray-200"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <!-- Dashboard info widget 4-->
                <div class="card border-start-lg border-start-info h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="small fw-bold text-info mb-1">Today visits</div>
                                <div class="h5">@item.Today</div>
                                <div class="text-xs fw-bold text-danger d-inline-flex align-items-center">
                                    <i class="me-1" data-feather="trending-up"></i>
                                    1%
                                </div>
                            </div>
                            <div class="ms-2"><i class="fas fa-percentage fa-2x text-gray-200"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>