@model NDCWeb.Areas.Admin.Models.CustomRole

@{
    ViewBag.Title = "Deleting Role ?";
}

<div class="main-card  card">
    <div class="card-body">
        <h5 class="card-title">@ViewBag.Title</h5>
        <hr />

        <h3 class="text-danger">Are you sure you want to delete this Role? </h3>
        <p class="text-danger">Deleting this Role will remove all users from this role. It will not delete the users.</p>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index","RolesAdmin")" class="btn btn-outline-info">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>
