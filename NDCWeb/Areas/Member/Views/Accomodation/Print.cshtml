@model NDCWeb.Areas.Member.View_Models.AccomodationIndexVM
@using NDCWeb.Infrastructure.Extensions;
@{
    ViewBag.Title = "Print Accommodation Form";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
<div class="container shadow p-3 mt-4 mb-4">
    <div id="printableArea" class="">
        <div class="text-center pt-4">
            <h4><u>ACCOMMODATION FORM : FOR INDIAN ARMED FORCES OFFICER’S ONLY</u></h4>
        </div>
        <div class="col-sm-12 mb-15 mt-4">
            <div class="row">
                <p class="col-md-6 col-lg-6"><b>1. Name : </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.FullName</div>
                <p class="col-md-6 col-lg-6"><b>2. Rank : </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.Rank</div>
                <p class="col-md-6 col-lg-6"><b>3. Decoration : </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.Decoration</div>
                <p class="col-md-6 col-lg-6"><b>4. Date of Commission : </b></p>
                <div class="col-md-6 col-lg-6">
                    @if (ViewBag.DOC != null)
                    {
                        @String.Format("{0:dd MMM yyyy}", ViewBag.DOC)
                    }
                </div>
                <p class="col-md-6 col-lg-6"><b>5. Date of Seniority: </b></p>
                <div class="col-md-6 col-lg-6">
                    @Html.DisplayFor(model => model.DateOfseniority)
                    @*@if (ViewBag.DOS != null)
            {
                @String.Format("{0:dd MMM yyyy}", ViewBag.DOS)
            }*@
                </div>

                <p class="col-md-6 col-lg-6"><b>6. Marital Status: </b></p>
                <div class="col-md-6 col-lg-6">@Html.DisplayFor(model => model.MaritalStatus)</div>
                <p class="col-md-6 col-lg-6"><b>7. Married accommodation Required (choose one) : </b></p>
                <div class="col-md-6 col-lg-6">@Html.DisplayFor(model => model.AccomReq)</div>
                @if (Model.SpecialRequestWithReason != null)
                {<p class="col-md-6 col-lg-6"></p>
                    <div class="col-md-6 col-lg-6">
                        @Html.DisplayFor(model => model.SpecialRequestWithReason)
                    </div>
                }

                @*<p class="col-md-12 col-lg-12"><b>8. If yes, preference of accommodation (Select either Raksha Bhawan or Vikram Vihar as priority 1/2) : </b></p>
        <p class="col-md-6 col-lg-6"><b>(a) Priority-1 : </b></p>
        <div class="col-md-6 col-lg-6"> @Html.DisplayFor(model => model.PriorityFirst)</div>
        <p class="col-md-6 col-lg-6"><b>(b) Priority-2 : </b></p>
        <div class="col-md-6 col-lg-6">@Html.DisplayFor(model => model.PrioritySecond)</div>
        <p class="col-md-6 col-lg-6"><b>(c) Any special request : </b></p>*@
                @*<div class="col-md-6 col-lg-6">@Html.DisplayFor(model => model.SpecialRequest)</div>*@
                @*<div class="col-md-6 col-lg-6">
                    @if (Model.SpecialRequest != null)
                    {
                        @Html.DisplayFor(model => model.SpecialRequest)
                    }
                </div>*@
                <p class="col-md-6 col-lg-6"><b>8. Your contact address: </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.Address</div>

                <p class="col-md-6 col-lg-6"><b>9. Mobile number : </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.MobileNo</div>
                <p class="col-md-6 col-lg-6"><b>10. E-mail : </b></p>
                <div class="col-md-6 col-lg-6">@ViewBag.EmailId</div>

                <p class="col-md-6 col-lg-6">
                    <b>11. Medical documents for ground floor or any other special request: </b>
                </p>
                <div class="col-md-6 col-lg-6">
                    @Html.DisplayFor(modelItem => Model.iAccomodationMedias.Count)
                    @*<a href="@Url.Action("ShowMediaFiles", new { id = Model.AccomodationId })" target="_blank" data-toggle="modal" data-target="#myModal"><i class="fa fa-eye"></i></a>*@
                    @Html.EncodedActionLink("", "ShowMediaFiles", "Accomodation", "member", new { id = Model.AccomodationId }, new { @class = "" }, "fa fa-eye")
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">List of Files</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    @{ int hiddenFileId = 1; }
                                    <table>
                                        <thead>
                                            <tr>
                                                <th width="15%">Sl No</th>
                                                <th>File Name</th>
                                            </tr>
                                        </thead>
                                        @foreach (var mdfl in Model.iAccomodationMedias)
                                        {
                                            <tr>
                                                <td>@hiddenFileId</td>
                                                <td>
                                                    <a href="@Url.Content(mdfl.FilePath)" target="_blank">@mdfl.FileName</a>
                                                </td>
                                            </tr>
                                            hiddenFileId++;
                                        }

                                    </table>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <p class="col-md-6 col-lg-6">
                    <b>12. Signature: </b>
                    <div class="col-md-6 col-lg-6">
                        @*<img src="@Url.Content(Model.SignatureDoc)" height="180" />
                @if (Model.SignatureDoc != null && Model.SignatureDoc != "")*@
                        <img src="@Url.Content(Model.SignatureDoc)" height="180" />
                    </div>
                </p>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12 col-lg-10">
                    <h4><b><u>Terms & Conditions</u></b></h4>
                    <br />
                    <p>1.   	<b>Rules.</b> As per MoD Office of the JS (AD) & CAO Accommodation Rules for Service Officers dated 15 July 1991, accommodation at Raksha Bhawan/Vikram Vihar can only be provided to Army/Navy/Air Force officers.</p>
                    <p>2.   	<b>Officers Posted to Delhi.</b> Officers Posted to Delhi detailed for the course from units in Delhi <b>will not be allotted NDC accomodation.</b> They should apply to the CAO/allotting authority for retention of defence/general pool accommodation. However officers who are staying in Officers Mess/temporary accn/appointment house alongwith family may apply for the same for the duration of the Course.</p>
                    <p>3.	    <b>Single Accommodation. No single accommodation is available with the College. Indian officers planning to stay single during the entire duration of the course are required to make arrangements for single accommodation through their respective Service HQs messes in Delhi.</b></p>
                    <p>4.	    <b>Allotment.</b>	Accommodation will be allotted by <b>23 Dec</b>, and can be taken over from <b>27/28 Dec</b> onwards only. Kindly plan move & transportation accordingly.</p>
                    <p>5.    	<b>Personal Help. Under no circumstances personal maid/help will stay in Raksha Bhawan. Maid/help can come in morning & will leave in evening by 2000 hrs. If any officer wishes to bring personal maid/help, kindly fill Vikram Vihar as Priority -1.</b></p>
                    <p>6.    	<b>Attachment.</b>	NDC does not have any arrangement/facility for attachment of buddies/ NCEs/retinue staff.</p>
                    <p>7.    	<b>Ground Floor.</b>	Request for Ground Floor accommodation <b>will not be entertained</b>. In case, ground floor accommodation is <b>required for medical reasons</b>, the officer must furnish an application, <b>countersigned by the IO/immediate superior officer alongwith medical documents duly endorsed/ recommended by the CO Military Hospital.</b></p>
                    <p>8.    	<b>Maids in RB.</b>	House maids will be on sharing basis in Raksha Bhawan (RB).</p>
                    <p>9. 	    <b>Subscription of RB.</b>	Subscription for RB residents will be deducted from Mess Bill towards RB fund every month.</p>
                    <p>10.    	<b>Hospitals and Schools.</b>	R & R Hospotal/Base Hospital and Schools are located towards <b>Shankar Vihar (SV).</b></p>
                    <p>11.   	<b>Vacation.</b>  Accommodation to be vacated on termination of the course i.e <b>24 Nov</b>. Maximum retention upto 07 days permitted ie <b>01 Dec</b> after approval of Commandant, NDC. Since the accommodation is required to be prepared for the next course, <b>retention Of NDC Pool Accommodation on any grounds </b>(education/academic reasons, medical issues) <b>is not permitted).</b> </p>
                    <p>12.      <b>Mid Course Relocation.</b> On completion of new NDC accommodation i.e. NDC suites in KG Marg, all officers will shift to NDC suites from Raksha Bhawan and Vikram Vihar in Feb/Mar 2023 under own arrangements. No representation on medical, educational grounds to avoid shifting will be accepted.</p>
                    <label>
                        <input type="checkbox" checked />
                        I have read and agreed to the Terms & Conditions of NDC Pool Accommodation
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer bg-white text-center">
        @*<button type="button" class="btn btn-primary btn-sm" onclick="return confirm('Record successfully submitted')">Submit</button>*@
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.AccomodationId }, new {@class = "btn btn-primary btn-sm" })*@
        <a href="@Url.Action("Entry", "Accomodation")" class="btn btn-secondary me-2">
            <i class="fa fa-arrow-left"></i> Back
        </a>
        <button type="reset" class="btn btn-outline-primary" onclick="printDiv('printableArea')">Print</button>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        function printDiv(divName) {
            var printContents = document.getElementById(divName).innerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
}