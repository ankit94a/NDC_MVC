                                {
                                    <input class="form-control disabled" disabled value="@String.Format("{0:dd MMM yyyy}", ViewBag.DOC)" />
                                }
                                else
                                {
                                    <input class="form-control disabled" disabled value="" />
                                }

                            </div>
                        </div>
                        @*change here*@
                        <div class="form-group row">
                            <label for="txtDob" class="control-label col-sm-4">5. Date of Seniority</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.DateOfseniority, new { htmlAttributes = new { @class = "form-control datepickerJq1" } })
                                @Html.ValidationMessageFor(model => model.DateOfseniority, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*change close*@
                        <div class="form-group row">
                            <label class="control-label col-sm-4" for="MaritalStatus">6. Marital Status: </label>
                            <div class="col-sm-6 ">
                                @Html.DropDownListFor(model => model.MaritalStatus, (IEnumerable<SelectListItem>)ViewBag.MaritalStatus, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaritalStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="control-label col-sm-4">7. Married accommodation Required (choose one): </label>
                            <div class="col-sm-8">
                                <div class="custom-control custom-radio custom-control">
                                    <input id="AccomReq1" type="radio" name="AccomReq" value="Yes wef commencement of Course" class="custom-control-input" />
                                    <label for="AccomReq1" class="custom-control-label">
                                        Yes wef commencement of Course
                                    </label>
                                </div>
                                <div class="custom-control custom-radio custom-control">
                                    <input id="AccomReq2" type="radio" name="AccomReq" value="Yes wef March/April" class="custom-control-input" />
                                    <label for="AccomReq2" class="custom-control-label">
                                        Yes wef March/April
                                    </label>
                                </div>
                                <table style="padding: 0px !important; margin: 0px !important; left: 0px" cellspacing="0">
                                    <tr>
                                        <td style="padding: 0">
                                            <div class="custom-control custom-radio custom-control">
                                                <input id="AccomReq4" type="radio" name="AccomReq" value="Yes wef" class="custom-control-input" />
                                                <label for="AccomReq4" class="custom-control-label"> Yes wef </label>
                                            </div>
                                        </td>
                                        <td style="padding: 0 10px 0 10px">
                                            <input name="AccomodationDate" type="text" id="AccomodationDate" style="width: 120px" class="form-control datepickerJq1" />
                                        </td>
                                        <td style="padding: 0 10px 0 10px">(please specify the date) </td>
                                    </tr>
                                </table>
                                <div class="custom-control custom-radio custom-control">
                                    <input id="AccomReq5" type="radio" name="AccomReq" value="No. Retaining accn in Delhi" class="custom-control-input" />
                                    <label for="AccomReq5" class="custom-control-label">
                                        No. Retaining accn in Delhi
                                    </label>
                                </div><br />
                                <table style="padding: 0px !important; margin: 0px !important; left: 0px; width:100% !important" cellspacing="0">
                                    @*<tr>
                                        <td style="padding: 0">
                                        <div class="custom-control custom-radio custom-control">
                                        <input id="AccomReq6" type="radio" name="AccomReq" value="No. Staying under own arrangement" class="custom-control-input" />
                                        <label for="AccomReq6" class="custom-control-label">
                                        No. Staying under own arrangement
                                        </label>
                                        </div>
                                        </td>
                                        <!--  <td class="text-danger">(NAC will be provided for claiming HRA)</td> -->
                                        </tr>*@
                                    <tr>
                                        <td style="padding: 0">
                                            <div class="custom-control custom-radio custom-control">
                                                <input id="AnySpecialRequest" type="radio" name="AccomReq" value="Any special request" class="custom-control-input" />
                                                <label for="AnySpecialRequest" class="custom-control-label">
                                                    Any special request ?
                                                </label>
                                            </div>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 0 10px 0 10px">
                                            @*<input name="SpecialRequestWithReason" placeholder="Special request with reason" type="text" id="SpecialRequestWithReason" class="form-control dvAnysplreq" />*@
                                            @Html.EditorFor(model => model.SpecialRequestWithReason, new { htmlAttributes = new { @class = "form-control dvAnysplreq", @placeholder = "Special request with reason" } })
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        @*<div class="form-group row">
                                <label class="control-label col-sm-4" for="PriorityFirst">8.  If yes, preference of accommodation (Select either Raksha Bhawan or Vikram Vihar as priority 1/2) </label>
                                <div class="col-md-8">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.PriorityFirst, htmlAttributes: new { @class = "control-label col-sm-6" })
                                        <div class="form-group col-md-5">
                                            @Html.DropDownList("PriorityFirst", (IEnumerable<SelectListItem>)ViewBag.GetAccnPreference, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.PriorityFirst, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(model => model.PrioritySecond, htmlAttributes: new { @class = "control-label col-sm-6" })
                                        <div class="form-group col-md-5">
                                            @Html.EditorFor(model => model.PrioritySecond, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PrioritySecond, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(model => model.SpecialRequest, htmlAttributes: new { @class = "control-label col-sm-6" })
                                        <div class="form-group col-md-5">
                                            @Html.DropDownList("SpecialRequest", (IEnumerable<SelectListItem>)ViewBag.GetAccnFloorRequest, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SpecialRequest, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                        <div class="form-group row">
                            <label for="Files" name="Files" class="control-label col-sm-4">8. Upload medical documents for ground floor or any other special request (Not more than 2MB). </label>
                            <div class="form-group col-md-5">
                                <input id="Files" type="file" name="medDocFile" multiple class="uploadify-button" accept="application/pdf" />
                            </div>
                            <label for="Files" name="Files" class="control-label col-sm-4">9. Upload Signature (Not more than 250KB) jpeg/jpg/png format only. </label>
                            <div class="form-group col-md-5">
                                <input id="Files" type="file" name="signFile" required class="uploadify-button" accept="image/jpeg,image/png" />
                            </div>
                        </div>
                    </div>
                    <div class="card-header">Contact Details</div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label id="surname" for="txtName" class="control-label col-sm-4">10. Address (Complete address with Pin Code)</label>
                            <div class="col-sm-6">
                                <input class="form-control disabled" disabled value="@ViewBag.Address" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label id="Label1" for="txtRank" class="control-label col-sm-4">11. Mobile No.</label>
                            <div class="col-sm-6">
                                <input class="form-control disabled" disabled value="@ViewBag.MobileNo" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label id="Label3" for="txtDecoration" class="control-label col-sm-4">12. E-mail(preferably use gov.in or nic.in)</label>
                            <div class="col-sm-6">
                                <input class="form-control disabled" disabled value="@ViewBag.EmailId" />
                            </div>
                        </div>
                    </div>
                    <div class="card-header">Terms & Conditions</div>
                    <div class="card-body">
                        <p>1.   	<b>Rules.</b> As per MoD Office of the JS (AD) & CAO Accommodation Rules for Service Officers dated 15 July 1991, accommodation at Raksha Bhawan/Vikram Vihar can only be provided to Army/Navy/Air Force officers.</p>
                        <p>2.   	<b>Officers Posted to Delhi.</b> Officers Posted to Delhi detailed for the course from units in Delhi <b>will not be allotted NDC accomodation.</b> They should apply to the CAO/allotting authority for retention of defence/general pool accommodation. However officers who are staying in Officers Mess/temporary accn/appointment house alongwith family may apply for the same for the duration of the Course.</p>
                        <p>3.	    <b>Single Accommodation. No single accommodation is available with the College. Indian officers planning to stay single during the entire duration of the course are required to make arrangements for single accommodation through their respective Service HQs messes in Delhi.</b></p>
                        <p>4.	    <b>Allotment.</b>	Accommodation will be allotted by <b>23 Dec</b>, and can be taken over from <b>27/28 Dec</b> onwards only. Kindly plan move & transportation accordingly.</p>
                        <p>5.    	<b>Personal Help. Under no circumstances personal maid/help will stay in Raksha Bhawan. Maid/help can come in morning & will leave in evening by 2000 hrs. If any officer wishes to bring personal maid/help, kindly fill Vikram Vihar as Priority -1.</b></p>
                        <p>6.    	<b>Attachment.</b>	NDC does not have any arrangement/facility for attachment of buddies/ NCEs/retinue staff.</p>
                        <p>7.    	<b>Ground Floor.</b>	Request for Ground Floor accommodation <b>will not be entertained</b>. In case, ground floor accommodation is <b>required for medical reasons</b>, the officer must furnish an application, <b>countersigned by the IO/immediate superior officer alongwith medical documents duly endorsed/ recommended by the CO Military Hospital.</b></p>
                        <p>8.    	<b>Maids in RB.</b>	House maids will be on sharing basis in Raksha Bhawan (RB).</p>
                        <p>9. 	    <b>Subscription of RB.</b>	Subscription for RB residents will be deducted from Mess Bill towards RB fund every month.</p>
                        <p>10.    	<b>Hospitals and Schools.</b>	R & R Hospotal/Base Hospital and Schools are located towards <b>Shankar Vihar (SV).</b></p>
                        <p>11.   	<b>Vacation.</b>  Accommodation to be vacated on termination of the course i.e <b>24 Nov</b>. Maximum retention upto 07 days permitted ie <b>01 Dec</b> after approval of Commandant, NDC. Since the accommodation is required to be prepared for the next course, <b>retention Of NDC Pool Accommodation on any grounds </b>(education/academic reasons, medical issues) <b>is not permitted).</b> </p>
                        <p>12.      <b>Mid Course Relocation</b> On completion of new NDC accommodation i.e. NDC suites in KG Marg, all officers will shift to NDC suites from Raksha Bhawan and Vikram Vihar in Feb/Mar 2023 under own arrangements. No representation on medical, educational grounds to avoid shifting will be acceptd.</p>
                        <div class="custom-control custom-checkbox custom-control">
                            <input id="checkbox1" type="checkbox" class="custom-control-input" /><label for="checkbox1" class="custom-control-label">I have read and agreed to the Terms & Conditions of NDC Pool Accommodation</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white text-center">
                    <input type="submit" onclick="javascript:if(!this.form.checkbox1.checked){alert('You must agree to the terms before proceeding ahead.');return false};" value="Submit" class="btn btn-primary btn-sm" />
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".datepickerJq1").datepicker({
                dateFormat: 'dd-mm-yy',
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:+10', // Adjust year range as needed
                showButtonPanel: true
            });
        });
    </script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>


    <script>
        $(function () {
            /*$('#PrioritySecond').attr("disabled", true);*/
            $("#PriorityFirst").change(function () {
                var pr1 = $('option:selected', this).text();
                if (pr1 != "-- Select --") {
                    if (pr1 == "Raksha Bhawan") {
                        $('input[name^="PrioritySecond"]').val("Vikram Vihar");
                        $('#PrioritySecond').attr("style", 'color:green');
                    }
                    if (pr1 == "Vikram Vihar") {
                        $('input[name^="PrioritySecond"]').val("Raksha Bhawan");
                        $('#PrioritySecond').attr("style", 'color:blue');
                    }
                }
                else {
                    $('input[name^="PrioritySecond"]').val("");
                    $('#PrioritySecond').attr("style", "background-color:orange");
                }
            })
            //.change();
        });
        $(document).ready(function () {
            changeAnySplReq();
        });
        $('#AnySpecialRequest').change(function () {
            changeAnySplReq();
        });
        function changeAnySplReq() {
            if ($('#AnySpecialRequest').is(":checked"))
                $(".dvAnysplreq").show();
            else
                $(".dvAnysplreq").hide();
        }
    </script>
}
