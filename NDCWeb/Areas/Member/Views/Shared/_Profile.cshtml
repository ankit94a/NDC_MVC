<!DOCTYPE html>
<html>
<head id="Head1">
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale = 1.0,maximum-scale = 1.0" />
    <meta charset="utf-8" />
    <meta content="IE=Edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
        National Defence College
    </title>
    <meta content="National Defence College, NDC,New Delhi,NDC DELHI, Delhi, MPhil, Affiliated to Madras University, Defence Education, AI, warfare, modern, warfare, army, army college, raksha bhawan,civil,service,air force, navy, police" name="keywords" />
    <meta content="NDC is a pioneering institute of its type in Asia. The role of the college has remained largely unchanged since 1959, when the President of India sanctioned the setting up of a National Defence College for providing instruction to senior service and civil service officers in the wider aspects of higher direction and strategy of warfare." name="description" />
    <meta content="National Defence College, NDC,New Delhi,NDC DELHI, Delhi, MPhil, Affiliated to Madras University, Defence Education, AI, warfare, modern, warfare, army, army college, raksha bhawan,civil,service,air force, navy, police" name="DC.Subject.Keyword" />
    <meta content="NDC is a pioneering institute of its type in Asia. The role of the college has remained largely unchanged since 1959, when the President of India sanctioned the setting up of a National Defence College for providing instruction to senior service and civil service officers in the wider aspects of higher direction and strategy of warfare." name="NDC.Description" />
    <link rel="stylesheet" type="text/css" href="~/Component/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Member/Component/css/style.css" />

    <link rel="stylesheet" type="text/css" href="~/Areas/Member/Component/css/main.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Member/Component/css/index.css" />
    @*<link rel="stylesheet" type="text/css" href="~/Areas/Member/Component/fontawesome/css/fontawesome.min.css" />*@
    <!-- Color Theme CSS -->
    <link rel="icon" href="/images/NDC-Logo.png" type="image/x-icon">
    @*@Styles.Render("~/Content/css")*@

    @Styles.Render("~/bundles/jquistyle")
    @Styles.Render("~/bundles/datatables/css")
    @Scripts.Render("~/bundles/mainjs")

    <style type="text/css">
        .menuchang {
            background-image: url('images/new.gif');
            background-repeat: no-repeat;
            padding-right: 5px;
            background-position: top;
        }

        .logo {
            top: 10%;
            left: 40%;
            position: absolute;
            transform: translate(-50%, 0%);
        }

        .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
            background-color: #0061f1;
            font-size: 1.3em;
        }

        .nav-tabs .nav-link {
            border: 1px solid #c9d9ef;
            background-color: #eaf8f7;
        }

        .form-control {
            font-size: 1.0em;
        }

        .nav-tabs .nav-link {
            padding: .8rem 2rem;
        }

        label {
            font-weight: 400;
        }

        table tr th {
            background-color: #fff;
            color: #353535;
            text-align: center;
        }
        .card {
            border: 0;
            border-radius: 0;
        }
        .card-header {
            background-color: #fff;
            color: #0867dd;
            font-weight: 700;
        }
        .card-body {
            padding: 0.75rem;
        }
        .list-group-item {
            border: 0;
            padding: 0.45rem 1.25rem;
        }
    </style>
</head>
<body id="fontSize" style="background-color:#f3fbfa">
    @Html.Partial("_Header")
    <div class="mean-container">
    </div>
    @if (ViewBag.SiteMenuItems != null)
    {
        @Html.Partial("_UserMenu");
    }
    <!-- Menu Part End -->
    <div class="clearfix">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div class="card shadow mt-4 mb-5 bg-white">
                    <div class="card-header">YOUR STEPS</div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item"><i class="fa fa-check-circle text-black-50 mx-2"></i> Instructions</li>
                            <li class="list-group-item"><i class="fa fa-check-circle text-success mx-2"></i> Personal Detail Form</li>
                            <li class="list-group-item"><i class="fa fa-check-circle text-success mx-2"></i>Service Details</li>
                            <li class="list-group-item"><i class="fa fa-warning text-danger mx-2"></i> Spouse Details <span class="ml-4 badge badge-danger">Incomplete</span></li>
                            <li class="list-group-item"><i class="fa fa-warning text-danger mx-2"></i> Children Details <span class="ml-4 badge badge-danger">Incomplete</span></li>
                            <li class="list-group-item"><i class="fa fa-warning text-danger mx-2"></i> Administration <span class="ml-4 badge badge-danger">Incomplete</span></li>
                            <li class="list-group-item"><i class="fa fa-warning text-danger mx-2"></i> Account Details <span class="ml-4 badge badge-danger">Incomplete</span></li>
                            <li class="list-group-item"><i class="fa fa-check-circle text-black-50 mx-2"></i> Preview </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Footer");

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-112591026-1"></script>

    @*@Scripts.Render("~/bundles/mainjs")*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/custom")

    @RenderSection("scripts", required: false)

</body>
</html>
