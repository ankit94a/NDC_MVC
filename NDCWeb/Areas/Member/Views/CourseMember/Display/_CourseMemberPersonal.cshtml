@model NDCWeb.Areas.Member.View_Models.CrsMemberPersonalIndxVM
    <style>
        .panel-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px; /* space between buttons */
            padding: 10px;
            background: #f8f9fa; /* light gray footer background */
            border-top: 1px solid #dee2e6;
        }

            .panel-footer .btn {
                flex: 1; /* equal width for all buttons */
                font-size: 0.95rem;
                font-weight: 600;
                padding: 10px 0;
                border-radius: 8px;
              
            }

            /* Edit button (success) */
            .panel-footer .btn-success {
                background: #0d6efd;
                border: none;
                color: white;
            }

                .panel-footer .btn-success:hover {
                    background: linear-gradient(45deg, #218838, #1e7e34);
                    
                }

            /* Previous & Next (info) */
            .panel-footer .btn-info {
                background: #0d6efd;
                border: none;
                color: white;
            }

                .panel-footer .btn-info:hover {
                    background: linear-gradient(45deg, #138496, #117a8b);
                   
                }

            /* Disabled state */
            .panel-footer .btn:disabled {
                background: #d6d6d6 !important;
                color: #7a7a7a !important;
                border: none;
                cursor: not-allowed;
             
            }

    </style>
