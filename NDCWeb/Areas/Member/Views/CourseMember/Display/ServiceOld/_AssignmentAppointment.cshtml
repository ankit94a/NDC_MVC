@model IEnumerable<NDCWeb.Areas.Member.View_Models.ImportantAssignmentIndxVM>

<div class="card">
    <div class="card-body">
        <table class="table table-condensed table-bordered table-hover">
            <thead>
                <tr class="bg-light">
                    <td class="juipfname">@Html.DisplayNameFor(model => model.Appointment)</td>
                    <td class="juipfname">@Html.DisplayNameFor(model => model.Organisation)</td>
                    <td class="juipfname">@Html.DisplayNameFor(model => model.Location)</td>
                    <td class="juipfname">@Html.DisplayNameFor(model => model.From)</td>
                    <td class="juipfname">@Html.DisplayNameFor(model => model.To)</td>
                    <td>Remove</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="juipfvalue">@Html.DisplayFor(modelItem=>item.Appointment)</td>
                    <td class="juipfvalue">@Html.DisplayFor(modelItem=>item.Organisation)</td>
                    <td class="juipfvalue">@Html.DisplayFor(modelItem=>item.Location)</td>
                    <td class="juipfvalue">@Html.DisplayFor(modelItem=>item.From)</td>
                    <td class="juipfvalue">@Html.DisplayFor(modelItem=>item.To)</td>
                    <td>
                        <button type="button" class="btn btn-transparent red btn-xs" onclick="removeImptAssignment(@item.AsgmtAppointmentId, this)"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <div class="panel-footer">
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnPrevious">Previous</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-success" onclick="addTab('ImportantAssignmentPartial')">Edit</a>
            <a class="btn jui-btn col-md-4 col-xs-12 btn-lg btn-info btnNext">Next</a>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.btnNext').click(function () {
            $('.nav-tabs .active').parent().next('li').find('a').trigger('click');
        });

        $('.btnPrevious').click(function () {
            $('.nav-tabs .active').parent().prev('li').find('a').trigger('click');
        });
    });
    function removeImptAssignment(id, event) {
        $.ajax({
            type: 'delete',
            url: '/api/courseMembers/ImportantAssignmentDelete/' + id,
            datatype: 'json',
            success: function (data, textStatus, xhr) {
                if (textStatus === 'success') {
                    $(event).closest("tr").remove();
                }
            },
            error: function () {
                alert('Operation Failed!')
            }
        });
    }
</script>
