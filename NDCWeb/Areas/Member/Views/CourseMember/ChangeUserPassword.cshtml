@model NDCWeb.Areas.Admin.View_Models.ChangeUserPasswordViewModel
@{
    ViewBag.Title = "Change Your Password";
}

<div class="d-flex justify-content-center align-items-center ">
    @using (Html.BeginForm("ChangeUserPassword", "CourseMember", FormMethod.Post, new { @class = "w-100", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-center">
            <div class="card shadow-lg border-0 rounded-4 col-md-5">

                <!-- Header -->
                <div class="card-header text-white text-center fw-bold fs-5"
                     style="background: linear-gradient(135deg, #c7151ff7, #600208);">
                    <i class="bi bi-shield-lock-fill me-2"></i> @ViewBag.Title
                </div>

                <!-- Validation Summary -->
                <div class="px-3 pt-3">
                    @Html.ValidationSummary("", new { @class = "text-danger small" })
                </div>

                <!-- Card Body -->
                <div class="card-body px-4 py-3">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label fw-semibold" })
                        @Html.PasswordFor(m => m.CurrentPassword, new
                        {
                            @class = "form-control form-control-lg shadow-sm",
                            autocomplete = "off",
                            autocorrect = "off",
                            value = "",
                            oncopy = "return false",
                            onpaste = "return false"
                        })
                        @Html.HiddenFor(m => m.hdns)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-label fw-semibold" })
                        @Html.PasswordFor(m => m.NewPassword, new
                        {
                            @class = "form-control form-control-lg shadow-sm",
                            autocomplete = "off",
                            autocorrect = "off",
                            value = "",
                            oncopy = "return false",
                            onpaste = "return false"
                        })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-semibold" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new
                        {
                            @class = "form-control form-control-lg shadow-sm",
                            autocomplete = "off",
                            autocorrect = "off",
                            value = "",
                            oncopy = "return false",
                            onpaste = "return false"
                        })
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center ">
                    <button type="submit" class="btn btn-outline-danger rounded-pill" onclick="Changepage();">
                        <i class="bi bi-arrow-repeat me-1"></i> Change Password
                    </button>
                </div>
            </div>
            </div>
            }
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script type="text/javascript" src="~/Areas/Admin/Component/scripts/aes.js"></script>
            <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptft.js"></script>
            <script type="text/javascript" src="~/Areas/Admin/Component/scripts/ccryptimp.js"></script>
        }
