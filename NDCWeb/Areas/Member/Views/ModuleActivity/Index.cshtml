@model IEnumerable<NDCWeb.Areas.Staff.View_Models.TrainingActivityIndxVM>

@{
    ViewBag.Title = "Index";
}

<h3 style="text-align:center"> Training Activities</h3>

<table class="table table-hover table-bordered tab w-100" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Module")
            </th>
            <th>
                @Html.DisplayName("Activities")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Module)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a class="btn btn-outline-primary" href="@Url.Action("ShowMediaFiles", new { id = item.TrainingActivityId })" target="_blank"><i class="fa fa-eye"></i></a>
                    @*<a class="btn btn-outline-primary" href="@Url.Action("ShowActivity", new { id = item.TrainingActivityId })" target="_blank"><i class="fa fa-eye"></i>Show</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
    LoadJDT('#myTable');
    </script>
}