
@model IEnumerable<NDCWeb.Areas.Member.View_Models.StaffCrsMbrBirthdayAlertVM>
<table>
    <tr class="custom-header text-white">
        <td colspan="4"><span class="card-title"><i class="fa fa-gift"></i> Birthday</span></td>
    </tr>
    @foreach (var item in Model)
    {
       <tr>
           <td>
               <strong>@Html.DisplayFor(modelItem => item.DOB, "{0:dd MMM yyyy}")</strong>
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.FullName)
           </td>
       </tr> 
    }
</table>
